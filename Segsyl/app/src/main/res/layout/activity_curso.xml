<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_curso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enrique.segsyl.Activities.CursoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PROGRAMACION I"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:id="@+id/tv_semana"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Semana del 01/01/16 al 07/01/16"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_teoria"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="TEORIA"
                android:layout_marginEnd="30dp"/>

            <Button
                android:id="@+id/btn_practica"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="PRACTICA"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_labo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="LABO"/>

    </LinearLayout>

</RelativeLayout>
